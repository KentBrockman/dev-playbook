# echo '.aliases loaded'

# Naviation Helpers
alias ~='cd ~'
alias .='cd ..'
alias ..='cd ../..'
alias ...='cd ../../..'
alias ....='cd ../../../..'

# Git Helpers
alias st='git status'
alias gd='git diff'
alias git-reset='git reset --hard && git clean -f'
alias gitlog="git log --graph --pretty=format:'%cd - %Cred%h%Creset %Cgreen(%cr) - %C(bold blue)%an -%C(yellow)%d%Creset %s' --abbrev-commit --date=iso"

# Directory Listing Helpers
alias la='ls -al'
alias lah='ls -alh'

# disk space
alias diskusage='du -h -d 1 .'

alias ssh-key-make='ssh-keygen -t rsa -b 2048 -C'

source ~/dotfiles/cmds/env-cd

alias ctop='docker run --rm -ti -v /var/run/docker.sock:/var/run/docker.sock quay.io/vektorlab/ctop:latest'
alias tvim='gnome-terminal --command="vim ." .'

# nice tool replacements
if command -v prettyping &> /dev/null
then
    alias ping=prettyping
fi

if command -v batcat &> /dev/null
then
    alias less=batcat
    alias cat=batcat
fi
