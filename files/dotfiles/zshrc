# show loading cause i'm trying to figure out order and when these are called for login/non login/ssh shells
# echo '.zshrc loaded'

# Use root profile for common stuff 
source ~/.aliases

# disable software flow control
# https://unix.stackexchange.com/questions/72086/ctrl-s-hang-terminal-emulator
stty -ixon

# Display red dots whilst waiting for completion.
COMPLETION_WAITING_DOTS="true"

# use oh-my-zsh for nice tab-autocompletion UX
source ~/.oh-my-zsh/oh-my-zsh.sh

autoload -U +X bashcompinit && bashcompinit
complete -o nospace -C $(which mc) mc

# load keyboard customizations
# https://unix.stackexchange.com/questions/31970/remap-capslock-to-escape-and-control-system-wide
if [ -n "${DISPLAY+x}" ]; then
	xmodmap ~/.Xmodmap
fi

# starship for prompt goodness
if [ $(command -v starship) ]; then
	eval "$(starship init zsh)"
fi

# initialize pyenv if installed
if [ $(command -v pyenv) ]; then
	eval "$(pyenv init -)"
fi
